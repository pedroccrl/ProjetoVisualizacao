
@{
    ViewBag.Title = "Linhas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Linhas</h2>
<div class="container" ng-app="linhaOnibusApp" ng-controller="linhaOnibusController">
    <div id="map" style="height: 400px">
        <ui-gmap-google-map center="map.center" zoom="map.zoom">
            <ui-gmap-polyline ng-repeat="l in linhas" path="l.path" stroke="l.stroke">

            </ui-gmap-polyline>
        </ui-gmap-google-map>
    </div>
</div>

<style>
    .angular-google-map-container {
        height: 600px;
    }

    .angular-google-map {
        width: 100%;
        height: 100%;
        margin: auto 0px;
    }
</style>

@* AngularJS library *@

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>

@* google map directive js *@
<script src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.js"></script>
<script src="//rawgit.com/angular-ui/angular-google-maps/2.0.X/dist/angular-google-maps.js"></script>

<script src="~/Scripts/Transporte/linhaOnibusController.js"></script>